@model IEnumerable<FarjamRayan.Models.Video>
@{
   
    Layout = "~/Views/Shared/_LayoutBlog.cshtml";
}

    <title>ویدئوهای آموزشی فرجام رایان</title>
<section class="page-banner-area page-about">
    <div class="overlay"></div>
    <!-- Content -->
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-9 col-md-12 col-12 text-center">
                <div class="page-banner-content">
                    <h1 class="display-4 font-weight-bold">ویدئو های  فرجام رایان</h1>
                    <p>مطالب آموزشی و بروز ما را از دست ندهید</p>
                </div>
            </div>
        </div> <!-- / .row -->
    </div> <!-- / .container -->
</section>



<!-- LATEST BLOG
================================================== -->
<section class="section" id="blog">
    <div class="container">
        <div class="row justify-content-center">
            <!-- Side Panel -->
            <div class="col-12 col-md-4 blog-right-sidebar">

                <aside class="single-sidebar-widget post-category-widget">
                    <h4 class="widget-title">دسته بندی ها</h4>
                    <ul class="list cat-list p-0">
                        @{

                            foreach (var category in Model)
                            {
                                <li>
                                    <a href="#" class="d-flex">
                                        <p>@category.Category</p>
                                        <!--<p>&nbsp;(37)</p>-->
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </aside>

                <!----------------------Last Posts--------------------------------------->
                <aside class="single-sidebar-widget popular-post-widget">
                    <h3 class="widget-title">آخرین پست ها</h3>
                    @{

                        foreach (var item in Model.Take(3))
                        {


                            <div class="media post-item">
                                <video src="/Videos/@item.VideoFile" class="rounded" alt="post" width="20%"></video>
                               
                                <div class="media-body">
                                    <a href="/blogs/posts/@item.id">
                                        <h6>@item.Title</h6>
                                    </a>
                                    <sup>@item.UploadedTime.ToShortDateString()</sup>
                                </div>
                            </div>

                        }
                    }


                </aside>
                
            </div>


            <!-- /Side Panel -->
            <!-- Blog Posts -->
            <div class="col-12 col-md-8">

                <div class="row">
                    @foreach (var item in Model)
                    {

                        <div class="col-12 col-md-6 col-lg-6 mt-3" data-aos="fade-up" data-aos-delay="100">
                            <div class="blog-box">
                                <div class="blog-img-box">
                                    
                                    <video width="400" controls>
                                        <source src="/Videos/@item.VideoFile" type="video/mp4">
                                        <source src="/Videos/@item.VideoFile" type="video/ogg">
                                        Your browser does not support HTML5 video.
                                    </video>
                                    

                                    
                                </div>
                                <div class="single-blog">
                                    <div class="blog-content">
                                        <h6> @item.UploadedTime</h6>
                                        <a href="blog-inner.html">
                                            <h3 class="card-title">@item.Title</h3>
                                        </a>
                                        <p>

                                            @item.Description
                                        </p>
                                        <a href="/blogs/posts/@item.id" class="read-more">ادامه مطلب</a>
                                    </div>
                                </div>
                            </div>
                        </div>



                    }
                </div>
            </div>


        </div>


        <!-- /Blog Posts -->
    </div>
</section>
